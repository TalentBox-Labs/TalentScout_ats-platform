{
  "manifest_version": 3,
  "name": "TalentScout Sourcing",
  "version": "1.0.0",
  "description": "Source candidates from LinkedIn and GitHub directly into TalentScout ATS",
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "https://www.linkedin.com/*",
    "https://github.com/*",
    "https://api.talentscout.com/*"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://github.com/*",
    "https://api.talentscout.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/in/*", "https://github.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TalentScout Sourcing",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://www.linkedin.com/*", "https://github.com/*"]
    }
  ]
}