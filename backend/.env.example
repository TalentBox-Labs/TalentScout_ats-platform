# Application
APP_NAME=TalentScout ATS Platform
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://ats_user:ats_password@localhost:5432/ats_platform

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=*

# OpenAI (Required for AI features)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# AWS S3 (Optional - for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=ats-platform-files

# Email (Choose one: SendGrid or Resend)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=
RESEND_API_KEY=
FROM_EMAIL=noreply@talentscout.com
FROM_NAME=TalentScout ATS

# OAuth Integrations (Optional)
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# Job Boards (Optional)
INDEED_PUBLISHER_ID=
INDEED_API_KEY=

# Monitoring (Optional)
SENTRY_DSN=

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_EMAIL_TRACKING=true
ENABLE_ANALYTICS=true
